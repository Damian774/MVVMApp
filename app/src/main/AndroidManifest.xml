<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.pwsz.studentsindex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"> <!-- suppress google indexing warning -->
        <activity
            android:name=".views.SelectStudiesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.AddStudyActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".views.AddGradeActivity" />
        <activity android:name=".views.AddCategoryActivity" />
        <activity
            android:name=".views.HomeScreenActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.GradeListActivity"
            android:label="@string/title_grade_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".views.GradeDetailActivity"
            android:label="@string/title_grade_detail"
            android:parentActivityName=".views.GradeListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pl.pwsz.studentsindex.views.GradeListActivity" />
        </activity>
    </application>

</manifest>